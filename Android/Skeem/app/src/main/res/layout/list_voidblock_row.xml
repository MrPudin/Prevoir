<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <TextView
        android:id="@+id/list_item_voidblock_start"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:textColor="@color/colorFontSecondary"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <TextView
        android:id="@+id/list_item_voidblock_stop"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:textColor="@color/colorFontSecondary"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_row="0"
        android:layout_gravity="fill"
        android:layout_column="1"
        android:layout_rowSpan="2">
        <TextView
            android:id="@+id/list_item_voidblock_name"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/list_item_voidblock_checkbox"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorFontPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <CheckBox
            android:id="@+id/list_item_voidblock_checkbox"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:focusable="false"
            android:visibility="gone" />
    </RelativeLayout>
</GridLayout>