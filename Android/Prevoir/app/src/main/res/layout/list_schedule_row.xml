<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/list_item_schedule_layout_task"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <TextView
            android:id="@+id/list_item_schedule_start_time"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorFontSecondary"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/list_item_schedule_subject"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/list_item_schedule_start_time"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/list_item_schedule_start_time"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorFontSecondary"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <TextView
            android:id="@+id/list_item_schedule_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/list_item_schedule_start_time"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorFontPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/list_item_schedule_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/list_item_schedule_start_time"
            android:layout_below="@id/list_item_schedule_name"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/list_item_schedule_layout_voidblock"
        android:background="@color/colorFontSecondary"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:id="@+id/text_view_schedule_voidblock_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorFontWhitePrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text_view_schedule_voidblock_label" />
        <TextView
            android:id="@+id/list_item_schedule_voidblock_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_schedule_voidblock_label"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorFontWhiteSecondary"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>
</RelativeLayout>