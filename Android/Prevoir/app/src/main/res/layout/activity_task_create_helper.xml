<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="sstinc.prevoir.TaskCreateHelperActivity"
    android:id="@+id/scrollView_task_settings"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridLayout
            android:id="@+id/activity_task_create_helper"
            android:focusableInTouchMode="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Onetime and Repetitive -->
            <TextView
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:textColor="@color/colorFontPrimary"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_view_repetitions"/>

            <Switch
                android:id="@+id/switch_onetime_repetitive"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_gravity="end" />

            <Button
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:id="@+id/button_repetitions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:layout_gravity="fill_horizontal"
                android:visibility="visible"
                android:text="@string/button_repetitions_unset" />

            <!-- Duration Needed -->
            <TextView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:textColor="@color/colorFontPrimary"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_view_duration"/>

            <Spinner
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:id="@+id/spinner_duration_hours"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="4"
                android:layout_column="0" />

            <TextView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="4"
                android:layout_column="1"
                android:textColor="@color/colorFontPrimary"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_view_hours" />

            <Spinner
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:id="@+id/spinner_duration_minutes"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="4"
                android:layout_column="2" />

            <TextView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="4"
                android:layout_column="3"
                android:textColor="@color/colorFontPrimary"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_view_minutes" />

            <!-- Minimum Time period -->
            <TextView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:id="@+id/text_view_min_time_period"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:textColor="@color/colorFontPrimary"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_view_min_time_period" />
            <Switch
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:id="@+id/switch_min_time_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_gravity="end" />

            <Spinner
                android:id="@+id/spinner_min_time_period_hours"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="6"
                android:layout_column="0"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_view_min_time_period_hours"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="6"
                android:layout_column="1"
                android:visibility="gone"
                android:textColor="@color/colorFontPrimary"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_view_hours" />

            <Spinner
                android:id="@+id/spinner_min_time_period_minutes"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="6"
                android:layout_column="2"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_view_min_time_period_minutes"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="6"
                android:layout_column="3"
                android:visibility="gone"
                android:textColor="@color/colorFontPrimary"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_view_minutes" />
        </GridLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#3f51b5">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorFontWhite"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_view_deadline" />
            <Switch
                android:id="@+id/switch_deadline"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:checked="true"
                android:visibility="visible"/>
        </LinearLayout>

        <GridLayout
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Deadline -->
            <TextView
                android:id="@+id/text_view_deadline_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="8"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:textColor="@color/colorFontPrimary"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_view_deadline_time" />

            <Switch
                android:id="@+id/switch_deadline_add_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="8"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_gravity="end" />

            <sstinc.prevoir.ScrollableDatePicker
                android:id="@+id/date_picker_deadline"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_row="9"
                android:layout_column="0"
                android:layout_columnSpan="4"/>

            <sstinc.prevoir.ScrollableTimePicker
                android:id="@+id/time_picker_deadline"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_row="10"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:visibility="visible" />
        </GridLayout>
    </LinearLayout>
</ScrollView>