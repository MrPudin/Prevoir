<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="sstinc.prevoir.TaskCreateHelperActivity"
    android:id="@+id/scrollView_task_settings"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <GridLayout
        android:id="@+id/activity_task_create_helper"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Onetime and Repetitive -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textColor="@color/colorFontPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text_view_repetitions"/>

        <ToggleButton
            android:id="@+id/field_toggle_onetime_repetitive"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_gravity="end"
            android:textOn="@string/toggle_button_repetitive_onetime_text_on"
            android:textOff="@string/toggle_button_repetitive_onetime_text_off" />

        <Button
            android:id="@+id/button_repetitions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_gravity="fill_horizontal"
            android:visibility="gone"
            android:text="@string/button_repetitions_unset" />

        <!-- Duration Needed -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:textColor="@color/colorFontPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text_view_duration"/>

        <Spinner
            android:id="@+id/spinner_duration_hours"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal" />

        <TextView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:textColor="@color/colorFontPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text_view_hours" />

        <Spinner
            android:id="@+id/spinner_duration_minutes"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal" />

        <TextView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="4"
            android:layout_column="3"
            android:textColor="@color/colorFontPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text_view_minutes" />

        <!-- Minimum Time period -->
        <TextView
            android:id="@+id/text_view_min_time_period"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textColor="@color/colorFontPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text_view_min_time_period" />
        <ToggleButton
            android:id="@+id/field_toggle_min_time_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_gravity="end"
            android:textOn="@string/toggle_button_min_time_period_text_on"
            android:textOff="@string/toggle_button_min_time_period_text_off" />

        <Spinner
            android:id="@+id/spinner_min_time_period_hours"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:visibility="gone"
            android:gravity="fill_horizontal" />

        <TextView
            android:id="@+id/text_view_min_time_period_hours"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="6"
            android:layout_column="1"
            android:visibility="gone"
            android:textColor="@color/colorFontPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text_view_hours" />

        <Spinner
            android:id="@+id/spinner_min_time_period_minutes"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="6"
            android:layout_column="2"
            android:visibility="gone"
            android:gravity="fill_horizontal" />

        <TextView
            android:id="@+id/text_view_min_time_period_minutes"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="6"
            android:layout_column="3"
            android:visibility="gone"
            android:textColor="@color/colorFontPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text_view_minutes" />

        <!-- Deadline -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textColor="@color/colorFontPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text_view_deadline" />

        <ToggleButton
            android:id="@+id/field_toggle_deadline_add_time"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="7"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_gravity="end"
            android:textOn="@string/toggle_button_deadline_text_on"
            android:textOff="@string/toggle_button_deadline_text_off"/>

        <sstinc.prevoir.ScrollableDatePicker
            android:id="@+id/date_picker_deadline"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_columnSpan="4"/>

        <sstinc.prevoir.ScrollableTimePicker
            android:id="@+id/time_picker_deadline"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:visibility="gone" />
    </GridLayout>
</ScrollView>